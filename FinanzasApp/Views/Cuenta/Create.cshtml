@model FinanzasApp.Models.Cuenta

@{
    ViewData["Title"] = "Crear una Cuenta";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nueva Cuenta</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label"> Nombre</label>
                            <input id="Nombre" asp-for="Nombre" class="form-control" />
                            <span asp-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Categoria" class="control-label"></label>
                            <select asp-for="Categoria" id="Categoria" class="form-control">
                                <option selected>Seleccionar una Categoria</option>
                                <option value="Propia">Propia</option>
                                <option value="Credito">Crédito</option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Monto</label>
                            <input id="Monto" asp-for="Monto" class="form-control" />
                            <span asp-for="Monto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" id="crearCuenta" value="Crear Cuenta" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}