@model IEnumerable<FinanzasApp.Models.Cuenta>

@{
    ViewData["Title"] = "Lista de Cuentas";
}

<div class="container">
    <div class="row ">
        <div class="col-sm-10">

        </div>
        <div class="col-sm-2">
            <a class="btn btn-success d-block" id="agregarNuevaCuenta" asp-action="Create" asp-controller="Cuenta"><i class="far fa-plus-square"></i></a>
        </div>
    </div>


    <div class="row mt-3 ">
        <div class="col-sm-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered" id="datatable">
                    <thead class="thead-dark">
                        <tr>
                            <td>Nombre</td>
                            <td>Categoria</td>
                            <td>Monto</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Categoria</td>
                            <td>@item.Monto</td>


                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No existen registros</p>
            }
        </div>
    </div>
</div>